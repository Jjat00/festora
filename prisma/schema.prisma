datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Auth.js v5 Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  storageLimit  BigInt    @default(1073741824) // 1GB in bytes
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Festora Business Models
model Project {
  id                String        @id @default(cuid())
  userId            String
  name              String
  clientName        String
  type              ProjectType   @default(OTHER)
  date              DateTime
  slug              String        @unique
  pin               String?
  coverKey          String?
  coverPhrase       String?
  status            ProjectStatus @default(ACTIVE)
  selectionDeadline DateTime?
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos            Photo[]
  selections        Selection[]
  albumSuggestions  AlbumSuggestion[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([userId])
  @@index([slug])
}

model AlbumSuggestion {
  id           String   @id @default(cuid())
  projectId    String
  name         String   // "La Ceremonia en el Jardín"
  category     String   // "ceremonia"
  coverPhotoId String?
  photoCount   Int
  createdAt    DateTime @default(now())
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Photo {
  id               String     @id @default(cuid())
  projectId        String
  objectKey        String
  thumbnailKey     String?
  originalFilename String
  order            Int
  width            Int?
  height           Int?
  size             Int
  project          Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  selection        Selection?
  createdAt        DateTime   @default(now())

  // AI Analysis (Vercel AI SDK + LLM multimodal)
  aiStatus        AiStatus  @default(PENDING)
  aiProcessedAt   DateTime?

  // Scores del LLM
  blurScore        Float?    // 0-10. 0=muy borrosa, 10=nítida. Bokeh intencional=7+.
  compositeScore   Float?    // 0-100. Score compuesto de todos los factores.
  emotionLabel     String?   // Emoción dominante: feliz, neutral, conmovido. Null = sin rostro.
  emotionValence   Float?    // -1 (negativa) a +1 (positiva). Null = sin rostro.

  // Análisis detallado del LLM
  llmScore             Float?    // 1.0-10.0 calidad general.
  llmModel             String?   // Modelo usado: "gpt-4o-mini".
  llmSummary           String?   // Frase de resumen en español.
  llmDiscardReason     String?   // Razón de descarte (null = foto ok).
  llmBestInGroup       Boolean?  // ¿Mejor foto del grupo?
  llmComposition       String?   // "regla de tercios", "centrada", etc.
  llmPoseQuality       String?   // Calidad de la pose.
  llmBackgroundQuality String?   // Calidad del fondo.
  llmHighlights        String[]  // Puntos positivos detectados.
  llmIssues            String[]  // Problemas detectados.
  llmTokensUsed        Int?      // Tokens consumidos (tracking de costo).
  llmAnalyzedAt        DateTime? // Cuándo se analizó.
  llmCategory          String?   // Categoría: ceremonia, recepción, retratos, etc.
  llmTags              String[]  // Tags: novia, novio, grupo, primer-baile, etc.

  @@index([projectId])
  @@index([projectId, order])
  @@index([projectId, aiStatus])
  @@index([projectId, compositeScore])
}

model Selection {
  id        String   @id @default(cuid())
  projectId String
  photoId   String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([projectId, photoId])
  @@index([projectId])
}

enum AiStatus {
  PENDING
  QUEUED
  DONE
  FAILED
}

enum ProjectType {
  WEDDING
  QUINCEANERA
  GRADUATION
  PORTRAIT
  CASUAL
  CORPORATE
  PRODUCT
  OTHER
}

enum ProjectStatus {
  DRAFT
  ACTIVE
  LOCKED
  ARCHIVED
}
