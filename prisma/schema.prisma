datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Auth.js v5 Models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  storageLimit  BigInt    @default(1073741824) // 1GB in bytes
  projects      Project[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

// Festora Business Models
model Project {
  id                String        @id @default(cuid())
  userId            String
  name              String
  clientName        String
  type              ProjectType   @default(OTHER)
  date              DateTime
  slug              String        @unique
  pin               String?
  coverKey          String?
  status            ProjectStatus @default(ACTIVE)
  selectionDeadline DateTime?
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  photos            Photo[]
  selections        Selection[]
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([userId])
  @@index([slug])
}

model Photo {
  id               String     @id @default(cuid())
  projectId        String
  objectKey        String
  thumbnailKey     String?
  originalFilename String
  order            Int
  width            Int?
  height           Int?
  size             Int
  project          Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  selection        Selection?
  createdAt        DateTime   @default(now())

  // AI Analysis (null hasta que el worker procese la foto)
  aiStatus        AiStatus  @default(PENDING)
  aiProcessedAt   DateTime?

  // Fase 1: calidad técnica
  blurScore       Float?    // Laplacian variance. Borrosa real < 30. Bokeh: 60-150.
  brisqueScore    Float?    // BRISQUE. < 30 = buena calidad. 0-100.
  nimaScore       Float?    // NIMA estética. 0-10. > 5.5 = buena para eventos.
  compositeScore  Float?    // Score compuesto 0-100. Incluye blur + calidad + emoción.

  // Fase 2: análisis de emociones (DeepFace)
  emotionLabel    String?   // Emoción dominante: happy, neutral, sad, angry, etc. Null = sin rostro.
  emotionValence  Float?    // Valencia: -1 (negativa) a +1 (positiva). Null = sin rostro.

  // Fase 3.5: análisis LLM (Claude, GPT, Gemini)
  llmScore            Float?    // Score 1.0-10.0 del LLM (1 decimal).
  llmModel            String?   // Modelo usado: e.g. "claude-sonnet-4-6".
  llmSummary          String?   // Frase de resumen generada por el LLM.
  llmDiscardReason    String?   // Razón de descarte (null = foto ok).
  llmBestInGroup      Boolean?  // ¿Es la mejor foto del grupo?
  llmComposition      String?   // Composición: "rule of thirds", etc.
  llmPoseQuality      String?   // Calidad de la pose.
  llmBackgroundQuality String?  // Calidad del fondo.
  llmHighlights       String[]  // Puntos positivos detectados.
  llmIssues           String[]  // Problemas detectados.
  llmTokensUsed       Int?      // Tokens consumidos (para tracking de costo).
  llmAnalyzedAt       DateTime? // Cuándo se analizó.

  @@index([projectId])
  @@index([projectId, order])
  @@index([projectId, aiStatus])
  @@index([projectId, compositeScore])
}

model Selection {
  id        String   @id @default(cuid())
  projectId String
  photoId   String   @unique
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  photo     Photo    @relation(fields: [photoId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([projectId, photoId])
  @@index([projectId])
}

enum AiStatus {
  PENDING
  QUEUED
  DONE
  FAILED
}

enum ProjectType {
  WEDDING
  QUINCEANERA
  GRADUATION
  PORTRAIT
  CASUAL
  CORPORATE
  PRODUCT
  OTHER
}

enum ProjectStatus {
  DRAFT
  ACTIVE
  LOCKED
  ARCHIVED
}
